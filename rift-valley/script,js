function revealFact() {
  const factDiv = document.getElementById('lakeFact');
  factDiv.textContent = "Did you know? Kenya's Rift Valley Lakes are part of a UNESCO World Heritage Site due to their unique ecosystems and incredible biodiversity.";
  factDiv.classList.remove('hidden');
}

// Scroll reveal effect
const faders = document.querySelectorAll('.fade-in');

const appearOptions = {
  threshold: 0.2,
  rootMargin: '0px 0px -50px 0px'
};

const appearOnScroll = new IntersectionObserver(function(entries, observer) {
  entries.forEach(entry => {
    if (!entry.isIntersecting) return;
    entry.target.classList.add('visible');
    observer.unobserve(entry.target);
  });
}, appearOptions);

faders.forEach(fader => {
  appearOnScroll.observe(fader);
});
